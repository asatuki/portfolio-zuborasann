<!DOCTYPE html>
<html>
<head>
  <title>Zuborasann</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
 <nav class="navbar navbar-expand-lg navbar-light">
   <a class="navbar-brand" href="/"><h1>ずぼらさん</h1></a>
   <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false">
     <span class="navbar-toggler-icon"></span>
   </button>

   <div class="collapse navbar-collapse" id="Navber">
    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? %>

      <li class="nav-item">
        <a class="nav-link" href="/about"> あばうと</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/recipes"> まいれしぴ</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-method="delete" href="/users/sign_out"> ろぐあうと</a>
      </li>
    </ul>

    <%= form_tag(search_path,:method => 'get',class:'navbar-form') do %>
    <%= text_field_tag :search, nil, :placeholder => 'けんさく' %>
    <%= hidden_field_tag :target, 'recipe' %>
    <%= submit_tag 'けんさく', :title => nil %>
    <% end %>
  </div>
</nav>

<% else %>
 　　　<% if admin_signed_in? %>

　　　 <li class="nav-item">
        <a class="nav-link" data-method="delete" href="/admins/sign_out"> ろぐあうと</a>
      </li>
    </ul>

    <%= form_tag(search_path,:method => 'get',class:'navbar-form') do %>
    <%= text_field_tag :search, nil, :placeholder => 'けんさく' %>
    <%= hidden_field_tag :target, 'recipe' %>
    <%= submit_tag 'けんさく', :title => nil %>
    <% end %>
  </div>
</nav>

<% else %>

      <li class="nav nav-item">
        <a class="nav-link" href="/about"> あばうと</a>
      </li>
      <li class="nav nav-item">
        <a class="nav-link"　data-method="post" href="/users/sign_in"> ろぐいん</a>
      </li>
      <li class="nav nav-item">
        <a class="nav-link"　data-method="delete" href="/admins/sign_in"> かんりしゃ
        </a>
      </li>
    </ul>

    <%= form_tag(search_path,:method => 'get',class:'navbar-form') do %>
    <%= text_field_tag :search, nil, :placeholder => 'けんさく' %>
    <%= hidden_field_tag :target, 'recipe' %>
    <%= submit_tag 'けんさく', :title => nil %>
    <% end %>
  </div>
</nav>

    <% end %>
    <% end %>
<%= yield %>
</body>
</html>

